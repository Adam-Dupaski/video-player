{
  "name": "videoplayer",
  "widgetName": "VideoPlayer",
  "version": "1.0.0",
  "description": "Player for YouTube and Vimeo videos",
  "author": "Mendix BV",
  "license": "Apache-2.0",
  "config": {
    "widgetPath": "./dist/MxTestProject/widgets",
    "projectPath": "./dist/MxTestProject",
    "host": "http://localhost:8080/",
    "localPort": 3000
  },
  "scripts": {
    "start": "webpack-dev-server --hot --open",
    "checkTypes": "tsc --noEmit",
    "pretest": "npm run checkTypes && npm run lint && npm run build",
    "test": "npm run test:unit && npm run test:conditional",
    "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
    "test:dev": "karma start",
    "test:unit": "karma start --single-run --codeCoverage && node tests/remap.js",
    "test:e2e": "tsc -p ./tests/e2e/tsconfig.json && wdio ./tests/e2e/wdio.conf.js",
    "test:e2e:dev": "tsc -p ./tests/e2e/tsconfig.json && set DEBUG=true && wdio ./tests/e2e/wdio.conf.js",
    "dev": "gulp --gulpfile Gulpfile.js",
    "build": "gulp build",
    "lint": "tslint -c tslint.json '**/*.ts' '**/*.tsx' --exclude '**/node_modules/**'",
    "lint:fix": "npm run lint -- --fix",
    "deploy": " npm run updateProject && npm run deployApp",
    "updateProject": "node ./node_modules/mendix-widget-build-script/dist/UpdateMxProject.js",
    "deployApp": "node ./node_modules/mendix-widget-build-script/dist/DeployMxApp.js",
    "deployAndTest": "npm run deploy && npm run test:e2e",
    "release": "gulp release --gulpfile Gulpfile.js"
  },
  "pre-commit": [
    "checkTypes",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mendix/videoplayer"
  },
  "bugs": {
    "url": "https://github.com/mendix/videoplayer/issues"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.15",
    "@types/jasmine": "^3.3.0",
    "@types/karma": "^3.0.0",
    "@types/core-js": "^2.5.0",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-resize-detector": "^3.1.0",
    "@types/webdriverio": "^4.8.2",
    "check-dependencies": "^1.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "core-js": "^2.5.7",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fork-ts-checker-webpack-plugin": "^0.4.13",
    "gulp": "^3.9.1",
    "gulp-copy": "^4.0.1",
    "gulp-help": "^1.6.1",
    "gulp-sequence": "^1.0.0",
    "gulp-watch": "^5.0.1",
    "gulp-zip": "^4.2.0",
    "gulp-slash": "^1.1.3",
    "istanbul": "^0.4.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine": "^3.3.0",
    "json-loader": "^0.5.4",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^2.0.13",
    "mendix-client": "^7.15.4",
    "mendix-widget-build-script": "^1.0.3",
    "mendixmodelsdk": "^4.19.0",
    "mx-widget-typing-generator": "^0.0.2",
    "node-sass": "^4.5.3",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react": "^16.6.3",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.6.3",
    "react-hot-loader": "^4.7.1",
    "react-resize-detector": "^3.4.0",
    "react-test-renderer": "^16.6.3",
    "remap-istanbul": "^0.9.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3",
    "wdio-dot-reporter": "0.0.9",
    "wdio-jasmine-framework": "^0.3.1",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "^0.1.2",
    "webdriverio": "^4.8.0",
    "webpack": "^4.29.5",
    "webpack-bundle-analyzer": "^3.0.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "classnames": "^2.2.5"
  }
}
