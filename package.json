{
  "name": "videoplayer",
  "widgetName": "VideoPlayer",
  "version": "1.0.0",
  "description": "Player for YouTube, Dailymotion, Vimeo and Mp4 videos",
  "copyright": "2019 Mendix",
  "author": "Mendix",
  "license": "Apache-2.0",
  "config": {
    "widgetPath": "./dist/MxTestProject/widgets",
    "projectPath": "./dist/MxTestProject",
    "mendixHost": "http://localhost:8080/",
    "developmentPort": "3000"
  },
  "packagePath": "com.mendix.widget.web",
  "scripts": {
    "start": "concurrently \"npm run mx-script start:server -- --open\" \"npm:dev\"",
    "dev": "npm run mx-script start:ts",
    "build": "npm run mx-script build:ts",
    "lint": "npm run mx-script lint",
    "lint:fix": "npm run mx-script lint:fix",
    "mx-script": "cd ./node_modules/@mendix/pluggable-widgets-tools && node bin/mx-scripts.js",
    "pretest": "tsc && npm run lint && npm run build",
    "test": "npm run mx-script test:unit -- --no-cache --ci && npm run test:e2e",
    "test:unit": "npm run mx-script test:unit -- --coverage",
    "test:e2e": "export URL=https://videoplayer-sandbox.mxapps.io/ || set URL=https://videoplayer-sandbox.mxapps.io/ && npm run mx-script test:e2e:ts",
    "test:e2e:dev": "export DEBUG=true || set DEBUG=true && npm run mx-script test:e2e:ts",
    "prerelease": "npm run lint",
    "release": "npm run mx-script release:ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mendix/video-player"
  },
  "bugs": {
    "url": "https://github.com/mendix/video-player/issues"
  },
  "devDependencies": {
    "@mendix/pluggable-widgets-tools": "^0.1.0",
    "@types/big.js": "^4.0.5",
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/globalize": "0.0.34",
    "@types/jasmine": "^3.3.0",
    "@types/jest": "^24.0.0",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.9",
    "@types/react-resize-detector": "^4.0.1",
    "@types/webdriverio": "^4.13.0",
    "mendixmodelsdk": "4.19.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-hot-loader": "^4.3.11",
    "react-resize-detector": "^4.1.3",
    "react-test-renderer": "^16.6.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "classnames": "^2.2.6"
  }
}
